{
  "presets": ["@babel/preset-env"],
  "plugins": [
    [
    "module-resolver",
      {
        "root": ["./src"],
        "alias": {
          "configs": "./src/configs",
          "@constants": "./src/constants",
          "controllers": "./src/controllers",
          "documentation": "./src/documentation",
          "middlewares": "./src/middlewares",
          "models": "./src/models",
          "routes": "./src/routes",
          "services": "./src/services",
          "@utils": "./src/@utils",
          "validations": "./src/validations"
        }
      }
    ]
  ]
}
